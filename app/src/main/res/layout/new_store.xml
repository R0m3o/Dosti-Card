<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idNewStoreLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="50"
    android:background="@drawable/dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/idNewStoreName"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/field_background"
                        android:hint="Store Name"
                        android:inputType="text"
                        android:paddingLeft="62dp"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/idFNameIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/user_icon" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <Spinner
                        android:id="@+id/idNewStoreCity"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/field_background"
                        android:paddingLeft="55dp"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/idLNameIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/city_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/idNewStoreAddress"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/field_background"
                        android:hint="Address"
                        android:inputType="text"
                        android:paddingLeft="62dp"
                        android:singleLine="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/address_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/idNewStoreSetPoints"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/field_background"
                        android:hint="Max Points For Reward"
                        android:inputType="number"
                        android:paddingLeft="62dp"
                        android:singleLine="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/point_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/idNewStorePaymentToGetOnePoint"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/field_background"
                        android:hint="Payment To Get One Point"
                        android:paddingLeft="62dp"
                        android:singleLine="true"
                        android:inputType="number"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/point_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/idNewStoreSetDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/field_background"
                        android:hint="% Discount On Reward"
                        android:inputType="number"
                        android:paddingLeft="62dp"
                        android:singleLine="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/discount_icon" />
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/idLayoutCreate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="45"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/idImgVCreateStore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_arrow" />

            <Button
                android:id="@+id/idBtnCreateStore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_blur"
                android:clickable="true"
                android:text="CREATE" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>