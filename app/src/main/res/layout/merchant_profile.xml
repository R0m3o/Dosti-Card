<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idMerchantProfileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_background"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="85"
        android:background="@drawable/background_blur"
        android:orientation="horizontal"
        android:weightSum="10">


        <ImageView
            android:id="@+id/idMerchantProfilePhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:src="@drawable/insert_img_icon"
            android:scaleType="centerInside"
            android:clickable="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idMerchantProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Name"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/idMerchantProfileDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Admin/Moderator" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/idUpperLayout"
                        android:layout_width="290dp"
                        android:layout_height="65dp"
                        android:orientation="vertical">

                    <Button
                        android:id="@+id/idMerchantProfileJoinStore"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="@drawable/right_btn"
                        android:text="Join a Store" />

                    <Button
                        android:id="@+id/idMerchantProfileViewStore"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="@drawable/right_btn"
                        android:text="View Store"
                        android:visibility="gone" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/idMerchantProfileViewCustomer"
                        android:layout_width="290dp"
                        android:layout_height="65dp"
                        android:layout_below="@+id/idUpperLayout"
                        android:background="@drawable/left_btn"
                        android:text="view Customers" />

                    <Button
                        android:id="@+id/idMerchantProfileSetting"
                        android:layout_width="290dp"
                        android:layout_height="65dp"
                        android:layout_below="@+id/idMerchantProfileViewCustomer"
                        android:background="@drawable/right_btn"
                        android:text="Profile Setting" />

                    <Button
                        android:id="@+id/idMerchantProfileLogout"
                        android:layout_width="290dp"
                        android:layout_height="65dp"
                        android:layout_below="@+id/idMerchantProfileSetting"
                        android:background="@drawable/left_btn"
                        android:text="Logout" />

                </RelativeLayout>

            </ScrollView>

            <Button
                android:id="@+id/idReadTag"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Read"
                android:layout_alignParentBottom="true"
                android:background="@drawable/circular_btn"
                android:layout_margin="20dp"/>

            <Button
                android:id="@+id/idWriteTag"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Write"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/circular_btn"
                android:layout_margin="20dp"/>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>